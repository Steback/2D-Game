<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <Grid.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#FF123F61"/>
            <GradientStop Offset="0.6" Color="#FF0E4B79"/>
            <GradientStop Offset="0.7" Color="#FF106097"/>
        </LinearGradientBrush>
    </Grid.Background>
    <Viewbox>
        <StackPanel Margin="30">
            <TextBlock Text="2D Game" Foreground="White" TextAlignment="Center" FontWeight="Black" FontSize="20" />
            <Button Content="New game" margin="0 10 0 0" FontSize="10" />
            <Button Content="Load game" margin="0 10 0 0" FontSize="10" />
            <Button Content="Exit" margin="0 10 0 0" FontSize="10" />
        </StackPanel>
    </Viewbox>
</Grid>